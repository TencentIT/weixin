/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

li {
    list-style: none;
}


/* 右侧边线 */

.bdr {
    position: relative;
}

.bdr::after {
    content: "";
    display: block;
    width: 1rpx;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
    border-right: 1px solid #ccc;
}